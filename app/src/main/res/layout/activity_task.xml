<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="tn.mehrilassoued.com.todo.activities.TaskActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/task_name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:singleLine="true"
            android:textSize="42dp" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/task_note_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name_container"
        android:layout_centerHorizontal="true" android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/task_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Note"
            android:inputType="textMultiLine"
            android:textSize="12dp"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_note_container"
        android:layout_centerHorizontal="true"
        android:onClick="setDate"
        android:text="Select date"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text=""

        android:textSize="10dp"
        android:layout_below="@+id/include"
        android:textColor="#00c2ff" />
    <android.support.v7.widget.RecyclerView

        android:id="@+id/subtasks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add_subtask_button"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
        />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subtask"
        android:id="@+id/add_subtask_button"
        android:onClick="addSubtask"
        android:enabled="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="5dp"
        />

</RelativeLayout>
